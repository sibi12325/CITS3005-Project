@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix ex: <http://example.org/ontologies.owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:GuideShape a sh:NodeShape ;
    sh:targetClass ex:Guide ;
    sh:property [
        sh:path ex:has_title ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path ex:has_guidid ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path ex:has_step ;
        sh:class ex:Step ;
    ] .
